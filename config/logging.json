{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "standard": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    },
    "json": {
      "format": "%(message)s"
    },
    "structured": {
      "()": "pythonjsonlogger.jsonlogger.JsonFormatter",
      "format": "%(asctime)s %(name)s %(levelname)s %(message)s",
      "timestamp": true
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "standard",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "structured",
      "filename": "app.log",
      "maxBytes": 10485760,
      "backupCount": 10,
      "encoding": "utf8"
    },
    "error_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "ERROR",
      "formatter": "structured",
      "filename": "error.log",
      "maxBytes": 10485760,
      "backupCount": 10,
      "encoding": "utf8"
    },
    "agent_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "structured",
      "filename": "agents.log",
      "maxBytes": 10485760,
      "backupCount": 10,
      "encoding": "utf8"
    },
    "api_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "structured",
      "filename": "api.log",
      "maxBytes": 10485760,
      "backupCount": 10,
      "encoding": "utf8"
    }
  },
  "loggers": {
    "": {
      "level": "INFO",
      "handlers": ["console", "file"],
      "propagate": false
    },
    "agent": {
      "level": "INFO",
      "handlers": ["console", "agent_file", "error_file"],
      "propagate": false
    },
    "financial_data_provider": {
      "level": "INFO", 
      "handlers": ["console", "api_file", "error_file"],
      "propagate": false
    },
    "financial_data_collector": {
      "level": "INFO",
      "handlers": ["console", "file", "error_file"],
      "propagate": false
    },
    "httpx": {
      "level": "WARNING",
      "handlers": ["console", "api_file"],
      "propagate": false
    }
  }
}
